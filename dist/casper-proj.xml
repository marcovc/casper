<project> 
    <shortName>casper</shortName>
    <fullName>CaSPER libraries</fullName>
    <version>1.0.0rc1</version>
    <readmeFile>../README</readmeFile>
    <licenseFile>../LICENSE</licenseFile>
    <logoImage>../img/logo-48x48.png</logoImage>
    <componentList>
        <component>
            <name>library</name>
            <description>C++ Library</description>
            <canBeEdited>1</canBeEdited>
            <detailedDescription>Headers and binaries for the C++ library</detailedDescription>
            <selected>1</selected>
            <show>1</show>
            <folderList>
                <folder>
                    <description>Program Files</description>
                    <destination>${installdir}</destination>
                    <name>programfiles</name>
                    <platforms>all</platforms>
                    <distributionFileList>
                        <distributionDirectory>
                            <origin>casper/bin</origin>
                        </distributionDirectory>
                        <distributionDirectory>
                            <origin>casper/include</origin>
                        </distributionDirectory>
                        <distributionDirectory>
                            <origin>casper/lib</origin>
                        </distributionDirectory>
                        <distributionDirectory>
                            <origin>casper/share</origin>
                        </distributionDirectory>
                    </distributionFileList>
                    <shortcutList>
                        <shortcut>
                            <comment>Uninstall</comment>
                            <exec>${installdir}/${uninstallerName}</exec>
                            <icon></icon>
                            <name>Uninstall ${product_fullname}</name>
                            <path>${installdir}</path>
                            <platforms>all</platforms>
                            <runAsAdmin>0</runAsAdmin>
                            <runInTerminal>0</runInTerminal>
                            <windowsExec>${installdir}/${uninstallerName}.exe</windowsExec>
                            <windowsExecArgs></windowsExecArgs>
                            <windowsIcon></windowsIcon>
                            <windowsPath>${installdir}</windowsPath>
                        </shortcut>
                    </shortcutList>
                </folder>
                <folder>
                    <description>Program Files</description>
                    <destination>${installdir}</destination>
                    <name>programfileslinux</name>
                    <platforms>linux</platforms>
                </folder>
                <folder>
                    <description>Program Files</description>
                    <destination>${installdir}</destination>
                    <name>programfileswindows</name>
                    <platforms>windows</platforms>
                </folder>
                <folder>
                    <description>Program Files</description>
                    <destination>${installdir}</destination>
                    <name>programfilesosx</name>
                    <platforms>osx</platforms>
                </folder>
            </folderList>
            <startMenuShortcutList>
                <startMenuShortcut>
                    <comment>Uninstall ${product_fullname}</comment>
                    <name>Uninstall ${product_fullname}</name>
                    <runAsAdmin>0</runAsAdmin>
                    <runInTerminal>0</runInTerminal>
                    <windowsExec>${installdir}/${uninstallerName}.exe</windowsExec>
                    <windowsExecArgs></windowsExecArgs>
                    <windowsIcon></windowsIcon>
                    <windowsPath>${installdir}/</windowsPath>
                </startMenuShortcut>
            </startMenuShortcutList>
        </component>
        <component>
            <name>pycasper</name>
            <description>PyCasper</description>
            <canBeEdited>1</canBeEdited>
            <detailedDescription>Python bindings for CaSPER</detailedDescription>
            <selected>1</selected>
            <show>1</show>
            <folderList>
                <folder>
                    <description>Tmp</description>
                    <destination>${system_temp_directory}</destination>
                    <name>newfolder</name>
                    <platforms>all</platforms>
                    <distributionFileList>
                        <distributionFile>
                            <origin>PyCasper-${project.version}-py2.7.egg</origin>
                        </distributionFile>
                        <distributionFile>
                            <origin>find_install_dir.py</origin>
                        </distributionFile>
                    </distributionFileList>
                    <ruleList>
                        <programTest>
                            <condition>is_in_path</condition>
                            <name>python</name>
                        </programTest>
                    </ruleList>
                </folder>
            </folderList>
            <postInstallationActionList>
                <runProgram>
                    <explanation>Registering PyCaSPER as a new python extension</explanation>
                    <program>python</program>
                    <programArguments>-m easy_install PyCasper-${project.version}-py2.7.egg</programArguments>
                    <progressText>Registering PyCaSPER as a new python extension</progressText>
                    <workingDirectory>${system_temp_directory}</workingDirectory>
                    <ruleList>
                        <programTest>
                            <condition>is_in_path</condition>
                            <name>python</name>
                        </programTest>
                    </ruleList>
                </runProgram>
            </postInstallationActionList>
            <postUninstallationActionList>
                <deleteFile>
                    <path>${pycasper_install_dir}</path>
                    <progressText>Uninstalling python bindings from ${pycasper_install_dir}</progressText>
                </deleteFile>
            </postUninstallationActionList>
            <preUninstallationActionList>
                <setInstallerVariableFromScriptOutput>
                    <exec>python</exec>
                    <execArgs>find_install_dir.py</execArgs>
                    <name>pycasper_install_dir</name>
                    <workingDirectory>${system_temp_directory}</workingDirectory>
                    <ruleList>
                        <programTest>
                            <condition>is_in_path</condition>
                            <name>python</name>
                        </programTest>
                    </ruleList>
                </setInstallerVariableFromScriptOutput>
            </preUninstallationActionList>
        </component>
    </componentList>
    <allowAddRemoveComponents>1</allowAddRemoveComponents>
    <allowComponentSelection>1</allowComponentSelection>
    <defaultInstallationMode>qt</defaultInstallationMode>
    <enableRollback>1</enableRollback>
    <enableTimestamp>1</enableTimestamp>
    <osxPlatforms>osx-intel</osxPlatforms>
    <outputDirectory>.</outputDirectory>
    <requireInstallationByRootUser>1</requireInstallationByRootUser>
    <saveRelativePaths>1</saveRelativePaths>
    <singleInstanceCheck>1</singleInstanceCheck>
    <vendor>CaSPER Team</vendor>
    <parameterList>
        <directoryParameter>
            <name>installdir</name>
            <description>Installer.Parameter.installdir.description</description>
            <explanation>Installer.Parameter.installdir.explanation</explanation>
            <value></value>
            <default>${platform_install_prefix}/${product_shortname}-${product_version}</default>
            <allowEmptyValue>0</allowEmptyValue>
            <ask>yes</ask>
            <cliOptionName>prefix</cliOptionName>
            <mustBeWritable>yes</mustBeWritable>
            <mustExist>0</mustExist>
            <width>30</width>
        </directoryParameter>
    </parameterList>
</project>

